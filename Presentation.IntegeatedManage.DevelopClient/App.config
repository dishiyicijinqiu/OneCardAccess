<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.serviceModel>
    <behaviors>
      <endpointBehaviors>
        <behavior name="DefaultBehavior">
          <ApplicationContext isBidirectional="false" />
          <ExceptionHandling />
        </behavior>
        <behavior name="NoApplicationContextBehavior">
          <ExceptionHandling />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <extensions>
      <behaviorExtensions>
        <add name="ApplicationContext" type="FengSharp.OneCardAccess.Infrastructure.ApplicationContextBehaviorElement, FengSharp.OneCardAccess.Infrastructure" />
        <add name="ExceptionHandling" type="FengSharp.OneCardAccess.Infrastructure.ExceptionHandlingBehaviorElement, FengSharp.OneCardAccess.Infrastructure" />
      </behaviorExtensions>
    </extensions>
    <bindings>
      <basicHttpBinding>
        <binding name="DefaultBasicHttpBinding" sendTimeout="00:05:00" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:2015/AuthService.svc" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" contract="FengSharp.OneCardAccess.Domain.RBACModule.Service.Interface.IAuthService" name="AuthService" kind="" behaviorConfiguration="NoApplicationContextBehavior" />
      <endpoint address="http://localhost:2015/AccessService.svc" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" contract="FengSharp.OneCardAccess.Domain.RBACModule.Service.Interface.IAccessService" name="AccessService" kind="" behaviorConfiguration="DefaultBehavior" />
      <endpoint address="http://localhost:2015/MenuService.svc" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" contract="FengSharp.OneCardAccess.Domain.RBACModule.Service.Interface.IMenuService" name="MenuService" kind="" behaviorConfiguration="DefaultBehavior" />
      <endpoint address="http://localhost:2015/ActionService.svc" binding="basicHttpBinding" bindingConfiguration="DefaultBasicHttpBinding" contract="FengSharp.OneCardAccess.Domain.RBACModule.Service.Interface.IActionService" name="ActionService" kind="" behaviorConfiguration="DefaultBehavior" />
    </client>
  </system.serviceModel>
</configuration>